{
  "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "allowJs":true,
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["ESNext","DOM"],
      "isolatedModules": true,
      "skipLibCheck": true,
      "types": ["vite/client"],
      "baseUrl":".",
      "paths": {
        "/@/*": ["src/*"]
      }
  },
  "include": ["src/**/*.ts","src/**/*.d.ts","src/**/*.tsx","src/main.ts", "shims-vue.d.ts"],
  "exclude": ["**/node_modules", "**/.*/"],
}