{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 200,
  "eslint.alwaysShowStatus": true,
  "vetur.validation.template": false,
  "vetur.useWorkspaceDependencies": true,
